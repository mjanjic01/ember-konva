    />

    <layer.Image
      @x={{200}}
      @y={{40}}
      @height={{180}}
      @width={{180}}
      @scale={{object x=0.4 y=0.4}}
      @image={{this.image}}
      @draggable={{true}}
    />

    <layer.Text
      @text="="
      @fontSize={{36}}
      @x={{280}}
      @y={{60}}
      @fill="#020202"
    />

    <layer.Text
      @text="❤️"
      @fontSize={{36}}
      @x={{320}}
      @y={{60}}
      @fill="#020202"
      @draggable={{true}}
    />

    {{#if this.isCircleVisible}}
      <layer.Circle
        @width={{this.circleWidth}}
        @height={{this.circleHeight}}
        @x={{this.circleX}}
        @y={{this.circleY}}
        @fill={{this.circleFill}}
        @visible={{this.circleVisible}}
        @draggable={{true}}
        @onDragEnd={{fn this.updatePosition "circle"}}
      />
    {{/if}}
    {{#if this.isRectVisible}}
      <layer.Rect
        @width={{this.rectWidth}}
        @height={{this.rectHeight}}
        @x={{this.rectX}}
        @y={{this.rectY}}
        @fill={{this.rectFill}}
        @visible={{this.rectVisible}}
        @draggable={{true}}
        @onDragEnd={{fn this.updatePosition "rect"}}
      />
    {{/if}}

    {{#if this.isTextVisible}}
      <layer.Label as |label|>
        <label.Text
          @text={{this.textContent}}
          @x={{this.textX}}
          @y={{this.textY}}
          @width={{this.textWidth}}
          @height={{this.textHeight}}
          @fill={{this.textFill}}
          @visible={{this.textVisible}}
          @fontSize={{this.textFontSize}}
          @draggable={{true}}
          @ellipsis={{true}}
          @wrap="none"
          @onDragEnd={{fn this.updatePosition "text"}}
        />
      </layer.Label>
    {{/if}}

    {{!-- Examples of composite components --}}
    <Smiley @parent={{layer}} @x={{80}} @y={{300}} @radius={{30}} @name="Athos" @back="yellow" @fore="black"/>
    <Smiley @parent={{layer}} @x={{160}} @y={{300}} @radius={{30}} @name="Porthos" @back="cyan" @fore="black"/>
